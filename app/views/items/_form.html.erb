<!-- PHOTO DROP ZONE -->
<div class="photo-upload-container">
  <form action="/media" id="media-dropzone" class="dropzone" enctype="multipart/form-data">
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
    <div class="fallback">
      <input name="file" type="file" multiple />
    </div>
  </form>
</div>

<!-- FINISH PHOTO DROP ZONE -->

